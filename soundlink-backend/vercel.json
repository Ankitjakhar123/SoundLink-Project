{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/simple.js"
    },
    {
      "src": "/api",
      "dest": "/api/simple.js"
    },
    {
      "src": "/api/hello",
      "dest": "/api/hello.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/db-test",
      "dest": "/api/db-test.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/simple.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/simple.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 